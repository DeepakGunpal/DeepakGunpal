<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Uploads</title>
    <style>
      body {
        display: grid;
        place-items: center;
        gap: 2rem;
        background-color: beige;
      }
      .fileForm {
        border: 1px solid black;
        padding: 15px;
        border-radius: 5px;
      }
      .fileForm input {
        padding: 5px;
        font-size: larger;
      }
      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
    </style>
  </head>
  <body>
    <h1>File Upload</h1>
    <fieldset>
      <legend><h3>Single File Upload</h3></legend>
      <div class="fileForm">
        <form action="/single" method="post" enctype="multipart/form-data">
          <input
            type="file"
            name="mFile"
            id=""
            required
            accept="image/png, image/jpg, image/jpeg, application/pdf"
          />
          <input type="submit" value="upload" />
        </form>
      </div>
    </fieldset>

    <%if(data.length===1){%> Image uploaded!
    <a href="<%=data %>"><%=data.map(url=>url,'/n') %></a>
    <%} %>

    <fieldset>
      <legend><h3>Multi File Upload</h3></legend>
      <div class="fileForm">
        <form action="/multiple" method="post" enctype="multipart/form-data">
          <input
            type="file"
            name="mFiles"
            id=""
            required
            accept="image/png, image/jpg, image/jpeg, application/pdf"
            multiple
          />
          <input type="submit" value="upload" />
        </form>
      </div>
    </fieldset>

    <%if(data.length>1){%> Images Uploaded! <% data.map((url,i)=>{%>
    <a href="<%=url %>"> <%=i+1%>. <%=url %></a>
    <%});%> <%} %>
  </body>
</html>
